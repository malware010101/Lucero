    <div class="arrow left-arrow" onclick="previousSection()">&lt;</div>
    <div class="arrow right-arrow" onclick="nextSection()">&gt;</div>

    <script>
        let currentSection = 1;
        const totalSections = 6; // Incluye la secci√≥n final con el bot√≥n de Play

        function showSection(sectionNumber) {
            for (let i = 1; i <= totalSections; i++) {
                document.getElementById(`section${i}`) ? document.getElementById(`section${i}`).classList.add('hidden') : null;
            }
            if (sectionNumber <= totalSections - 1) {
                document.getElementById(`section${sectionNumber}`).classList.remove('hidden');
            } else {
                document.getElementById('finalSection').classList.remove('hidden');
            }
            updateArrows(sectionNumber);
        }

        function updateArrows(sectionNumber) {
            document.querySelector('.left-arrow').style.display = sectionNumber > 1 ? 'block' : 'none';
            document.querySelector('.right-arrow').style.display = sectionNumber < totalSections ? 'block' : 'none';
        }

        function nextSection() {
            if (currentSection < totalSections) {
                currentSection++;
                showSection(currentSection);
            }
        }

        function previousSection() {
            if (currentSection > 1) {
                currentSection--;
                showSection(currentSection);
            }
        }

        // Inicializaci√≥n
        showSection(currentSection);
    </script>
